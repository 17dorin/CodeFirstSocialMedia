@model List<Post>

<a asp-action="Create" asp-controller="Post">Create post</a>

@if(Model.Count != 0)
{
    foreach(Post p in Model)
    {
        <p>@p.Content</p>
        <a asp-action="Delete" asp-controller="Post" asp-route-id="@p.Id">Delete</a>
    }
}
else
{
    <p>You do not have any posts</p>
}
